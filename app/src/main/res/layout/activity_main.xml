<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="butchjgo.com.save2text.MainActivity">

    <Button
        android:id="@+id/btnSave2Internal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtInput"
        android:layout_marginStart="28dp"
        android:layout_marginTop="23dp"
        android:layout_weight="1"
        android:onClick="save2Internal"
        android:text="Save Internal" />

    <EditText
        android:id="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_weight="1"
        android:ems="10"

        android:inputType="text"
        android:text="" />

    <Button
        android:id="@+id/btnReadFromInternal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="readFromInternal"
        android:layout_alignBaseline="@+id/btnSave2Internal"
        android:layout_alignBottom="@+id/btnSave2Internal"
        android:layout_marginStart="24dp"
        android:layout_toEndOf="@+id/btnSave2Internal"
        android:text="Read internal" />

</RelativeLayout>
